<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_dk</item>
        <item name="colorAccent">@color/green</item>
        <item name="elevation">4dp</item>
        <item name="drawerArrowStyle">@style/NavigationDrawerArrowStyle</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="NavigationDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="NavigationDrawer">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/navigation_drawer_width</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:layout_gravity">start</item>
    </style>
    
    <style name="Padding">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="BoxLabel">
        <item name="android:textColor">@color/green_lt</item>
        <item name="android:layout_marginLeft">@dimen/padding_end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BoxLabelBackground" parent="Padding">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="BoxText">
        <item name="android:textColor">@color/green_lt</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="BoxRow">
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="Image">
        <item name="android:layout_width">@dimen/size_image</item>
        <item name="android:layout_height">@dimen/size_image</item>
        <item name="android:padding">@dimen/padding</item>
    </style>

    <style name="Label">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TableRow">
        <item name="android:layout_marginBottom">@dimen/margin_between</item>
        <item name="android:minHeight">@dimen/height_element</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ActionButton">
        <item name="android:background">@drawable/button_transparent_lt</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SpinnerButtonStyle" parent="android:Widget.Holo.Light.Spinner">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">@dimen/height_element</item>
    </style>

    <style name="SeparatorRow">
        <item name="android:background">@color/green_lt</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2dp</item>
    </style>

    <style name="Row">
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#DBDADB</item>
        <item name="android:layout_marginTop">@dimen/margin_between</item>
        <item name="android:layout_marginBottom">@dimen/margin_between</item>
    </style>

    <style name="LicenseLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/padding_end</item>
    </style>

    <style name="LicenseDescription">
        <item name="android:layout_marginBottom">@dimen/padding_end</item>
    </style>

    <style name="Card">

    </style>

</resources>
