<resources>

    <!-- Every value twice to guarantee compatibility for API < 11 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/ActionBarTheme</item>
        <item name="android:actionBarStyle">@style/ActionBarTheme</item>
        <item name="homeAsUpIndicator">@drawable/ic_up</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_up</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle</item>
    </style>

    <style name="ActionBarTheme" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/green</item>
        <item name="icon">@drawable/ic_home</item>
        <item name="titleTextStyle">@style/ActionBarTitleText</item>
        <item name="subtitleTextStyle">@style/ActionBarSubtitleText</item>
        <item name="android:colorPrimary">@color/green</item>
        <item name="android:colorPrimaryDark">@color/green_highlight</item>
    </style>

    <style name="ActionBarTabStyle"
        parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator</item>
        <item name="background">@drawable/tab_indicator</item>
    </style>

    <style name="ActionBarTitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ActionBarSubtitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="Padding">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="BoxLabel">
        <item name="android:textColor">@color/green_lt</item>
        <item name="android:layout_marginLeft">@dimen/padding_end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BoxLabelBackground" parent="Padding">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="BoxText">
        <item name="android:textColor">@color/green_lt</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="BoxRow" parent="Padding">
    </style>

    <style name="Image">
        <item name="android:layout_width">@dimen/size_image</item>
        <item name="android:layout_height">@dimen/size_image</item>
        <item name="android:padding">@dimen/padding</item>
    </style>

    <style name="Label">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TableRow">
        <item name="android:layout_marginBottom">@dimen/margin_between</item>
    </style>

    <style name="ActionButton">
        <item name="android:background">@drawable/button_transparent_lt</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SpinnerButtonStyle" parent="android:Widget.Holo.Light.Spinner">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">@dimen/height_element</item>
    </style>

    <style name="SeparatorRow">
        <item name="android:background">@color/green_lt</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2dp</item>
    </style>

    <style name="Row">
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="LicenseLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/margin_between</item>
    </style>

    <style name="LicenseDescription">
        <item name="android:background">@color/gray</item>
        <item name="android:padding">@dimen/padding_end</item>
        <item name="android:layout_marginBottom">@dimen/margin_between</item>
    </style>


</resources>
