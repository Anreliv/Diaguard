<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/separator"
        android:orientation="vertical"
        android:paddingBottom="@dimen/fab_offset"
        android:showDividers="middle">

        <LinearLayout style="@style/LayoutRow">

            <ImageView
                style="@style/LayoutRowImage"
                android:contentDescription="@null"
                android:src="@drawable/ic_time"
                android:tint="?iconColorPrimary" />

            <LinearLayout
                style="@style/LayoutRowItem"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_datestart"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAllCaps="false"
                    android:textColor="?android:textColorPrimary"
                    tools:text="@tools:sample/date/ddmmyy" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/padding"
                    android:text="@string/hyphen" />

                <Button
                    android:id="@+id/button_dateend"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAllCaps="false"
                    android:textColor="?android:textColorPrimary"
                    tools:text="@tools:sample/date/ddmmyy" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout style="@style/LayoutRow">

            <ImageView
                style="@style/LayoutRowImage"
                android:contentDescription="@null"
                android:tint="?iconColorPrimary"
                app:srcCompat="@drawable/ic_file" />

            <LinearLayout
                style="@style/LayoutRowItem"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner_format"
                    style="@style/LayoutRowText"
                    android:entries="@array/formats" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/export_style_container"
            style="@style/LayoutRow">

            <ImageView
                style="@style/LayoutRowImage"
                android:contentDescription="@null"
                android:tint="?iconColorPrimary"
                app:srcCompat="@drawable/ic_format" />

            <LinearLayout
                style="@style/LayoutRowItem"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/export_style"
                    style="@style/LayoutRowText"
                    android:entries="@array/styles" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/checkbox_note_container"
            style="@style/LayoutRow">

            <ImageView
                style="@style/LayoutRowImage"
                android:contentDescription="@null"
                android:src="@drawable/ic_note"
                android:tint="?iconColorPrimary" />

            <LinearLayout
                style="@style/LayoutRowItem"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/checkbox_note"
                    style="@style/LayoutRowText"
                    android:paddingStart="@dimen/margin_between"
                    android:paddingLeft="@dimen/margin_between"
                    android:text="@string/note_append" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/checkbox_tags_container"
            style="@style/LayoutRow">

            <ImageView
                style="@style/LayoutRowImage"
                android:contentDescription="@null"
                android:padding="4dp"
                android:tint="?iconColorPrimary"
                app:srcCompat="@drawable/ic_tag" />

            <LinearLayout
                style="@style/LayoutRowItem"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/checkbox_tags"
                    style="@style/LayoutRowText"
                    android:paddingStart="@dimen/margin_between"
                    android:paddingLeft="@dimen/margin_between"
                    android:text="@string/tags_append" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            style="@style/Padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/backgroundColorTertiary"
            android:text="@string/categories" />

        <com.faltenreich.diaguard.ui.view.CategoryCheckBoxList
            android:id="@+id/export_list_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>