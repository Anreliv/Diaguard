<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/margin_between">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/Padding"
            android:background="@color/green_light">

            <ImageView android:id="@+id/image_category"
                android:layout_width="@dimen/size_image"
                android:layout_height="@dimen/size_image"
                android:layout_centerVertical="true" />

            <TextView android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_between"
                android:layout_marginEnd="@dimen/margin_between"
                android:layout_toRightOf="@id/image_category"
                android:layout_toEndOf="@id/image_category"
                android:layout_marginLeft="@dimen/margin_between"
                android:layout_marginStart="@dimen/margin_between"
                android:layout_centerVertical="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_medium"/>

            <ImageView android:id="@+id/button_delete"
                android:layout_width="@dimen/size_image"
                android:layout_height="@dimen/size_image"
                android:src="@drawable/ic_action_delete"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <LinearLayout android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/height_element"
            android:orientation="vertical"
            android:gravity="center_vertical"/>

    </LinearLayout>

</android.support.v7.widget.CardView>