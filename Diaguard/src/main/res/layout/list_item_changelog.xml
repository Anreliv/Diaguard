<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/margin_between_larger"
    android:paddingStart="@dimen/margin_between_larger"
    android:paddingRight="@dimen/margin_between_larger"
    android:paddingEnd="@dimen/margin_between_larger"
    android:paddingTop="@dimen/margin_between_large"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_between_large"
        android:layout_marginEnd="@dimen/margin_between_large"
        android:textColor="@android:color/black"
        android:text="+"/>

    <TextView
        android:id="@+id/changelog_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"/>

</LinearLayout>