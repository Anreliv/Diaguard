<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="64dp" />

        <com.lapism.searchview.SearchView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/food"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_micro" />

        <TextView
            android:id="@+id/food_search_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_end"
            android:layout_marginStart="@dimen/padding_end"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_micro" />

    </LinearLayout>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <me.zhanghai.android.materialprogressbar.MaterialProgressBar
                android:id="@+id/food_search_progress"
                style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:indeterminate="true"
                android:visibility="gone"
                app:mpb_progressStyle="horizontal"
                app:mpb_useIntrinsicPadding="false" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <com.faltenreich.diaguard.ui.view.FoodRecyclerView
                    android:id="@+id/food_search_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/food_search_list_empty"
            style="@style/Padding"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <com.faltenreich.diaguard.ui.view.TintImageView
                android:id="@+id/food_search_empty_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:contentDescription="@null"
                app:tintColor="@color/green" />

            <TextView
                android:id="@+id/food_search_empty_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_end"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/food_search_empty_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_between"
                android:gravity="center" />

        </LinearLayout>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/padding_end"
            android:src="@drawable/fab_add"
            app:layout_anchor="@id/food_search_list"
            app:layout_anchorGravity="bottom|right|end"
            app:layout_behavior="com.faltenreich.diaguard.adapter.FloatingActionButtonBehavior"
            fab:fab_colorNormal="@color/green"
            fab:fab_colorPressed="@color/green_light"
            fab:fab_colorRipple="@color/green_lighter" />

    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>