<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginTop="@dimen/padding"
    android:layout_marginBottom="@dimen/padding"
    android:layout_marginRight="@dimen/margin_between"
    android:layout_marginEnd="@dimen/margin_between"
    tools:ignore="UseCompoundDrawables">

    <com.faltenreich.diaguard.ui.view.TintImageView
        android:id="@+id/image"
        android:layout_width="@dimen/size_image"
        android:layout_height="@dimen/size_image"
        android:contentDescription="@null"
        tools:src="@drawable/ic_category_bloodsugar"
        tools:tintColor="@color/green"/>

    <TextView
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/padding"
        android:layout_marginStart="@dimen/padding"
        android:textColor="?android:attr/textColorPrimary"
        tools:text="120 mg/dL"/>

</LinearLayout>