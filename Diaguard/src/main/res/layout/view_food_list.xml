<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/height_element"
        android:orientation="horizontal">

        <com.robinhood.ticker.TickerView
            android:id="@+id/food_list_value_calculated_integral"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:textColor="@color/gray_darker"
            android:textSize="@dimen/text_medium"
            android:visibility="gone" />

        <TextView
            android:id="@+id/food_list_value_calculated_point"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/gray_darker"
            android:textSize="@dimen/text_medium"
            android:visibility="gone" />

        <com.robinhood.ticker.TickerView
            android:id="@+id/food_list_value_calculated_fractional"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/gray_darker"
            android:textSize="@dimen/text_medium"
            android:visibility="gone" />

        <TextView
            android:id="@+id/food_list_value_sign"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:text="+"
            android:textColor="@color/gray_darker"
            android:textSize="@dimen/text_medium"
            android:visibility="gone" />

        <com.faltenreich.diaguard.ui.view.StickyHintInput
            android:id="@+id/food_list_value_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View style="@style/LayoutRowSeparator" />

    <Button
        android:id="@+id/food_list_button"
        style="?attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/food_add"
        android:textColor="@color/green" />

    <View
        android:id="@+id/food_list_separator"
        style="@style/LayoutRowSeparator"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/food_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false" />

</LinearLayout>