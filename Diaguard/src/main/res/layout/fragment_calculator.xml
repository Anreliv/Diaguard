<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout style="@style/LayoutRow">

                <com.faltenreich.diaguard.ui.view.TintImageView
                    style="@style/LayoutRowImage"
                    android:src="@drawable/ic_factor"
                    app:tintColor="@color/gray_darker" />

                <TextView
                    style="@style/LayoutRowLabel"
                    android:text="@string/factor" />

                <LinearLayout style="@style/LayoutRowTextLarge">

                    <EditText
                        android:id="@+id/calculator_factor"
                        style="@style/LayoutRowTextLarge"
                        android:layout_margin="0dp"/>

                    <com.faltenreich.diaguard.ui.view.TintImageView
                        style="@style/LayoutRowImage"
                        android:id="@+id/calculator_factor_edit_button"
                        android:layout_width="@dimen/size_image_small"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/margin_between"
                        android:layout_marginLeft="@dimen/margin_between"
                        android:layout_marginRight="0dp"
                        android:layout_marginEnd="0dp"
                        android:src="@drawable/ic_settings"
                        android:contentDescription="@string/note"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        app:tintColor="@color/green"/>

                </LinearLayout>

            </LinearLayout>

            <View style="@style/LayoutRowSeparator" />

            <LinearLayout style="@style/LayoutRow">

                <com.faltenreich.diaguard.ui.view.TintImageView
                    style="@style/LayoutRowImage"
                    android:src="@drawable/ic_category_meal"
                    app:tintColor="@color/gray_darker" />

                <TextView
                    style="@style/LayoutRowLabel"
                    android:text="@string/meal" />

                <EditText
                    android:id="@+id/calculator_meal"
                    style="@style/LayoutRowTextLarge" />

            </LinearLayout>

            <View style="@style/LayoutRowSeparator" />

            <LinearLayout style="@style/LayoutRow">

                <com.faltenreich.diaguard.ui.view.TintImageView
                    style="@style/LayoutRowImage"
                    android:src="@drawable/ic_action_done"
                    app:tintColor="@color/gray_darker" />

                <TextView
                    style="@style/LayoutRowLabel"
                    android:text="@string/pref_therapy_targets_target" />

                <EditText
                    android:id="@+id/calculator_target"
                    style="@style/LayoutRowTextLarge" />

            </LinearLayout>

            <View style="@style/LayoutRowSeparator" />

            <LinearLayout style="@style/LayoutRow">

                <com.faltenreich.diaguard.ui.view.TintImageView
                    style="@style/LayoutRowImage"
                    android:src="@drawable/ic_done_all"
                    app:tintColor="@color/gray_darker" />

                <TextView
                    style="@style/LayoutRowLabel"
                    android:text="@string/correction_value" />

                <EditText
                    android:id="@+id/calculator_correction"
                    style="@style/LayoutRowTextLarge" />

            </LinearLayout>

            <View style="@style/LayoutRowSeparator" />

            <LinearLayout style="@style/LayoutRow">

                <com.faltenreich.diaguard.ui.view.TintImageView
                    style="@style/LayoutRowImage"
                    android:src="@drawable/ic_category_bloodsugar"
                    app:tintColor="@color/gray_darker" />

                <TextView
                    style="@style/LayoutRowLabel"
                    android:text="@string/bloodsugar" />

                <EditText
                    android:id="@+id/calculator_bloodsugar"
                    style="@style/LayoutRowTextLarge">

                    <requestFocus />
                </EditText>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>