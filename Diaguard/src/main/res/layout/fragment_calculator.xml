<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_end"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <LinearLayout style="@style/LayoutRow"
                        android:paddingEnd="@dimen/margin_between"
                        android:paddingRight="@dimen/margin_between">

                        <com.faltenreich.diaguard.ui.view.TintImageView
                            style="@style/LayoutRowImage"
                            android:layout_margin="0dp"
                            android:src="@drawable/ic_category_bloodsugar"
                            app:tintColor="@color/gray_darker" />

                        <com.faltenreich.diaguard.ui.view.StickyHintInput
                            android:id="@+id/calculator_bloodsugar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/bloodsugar"
                            android:inputType="numberDecimal">

                            <requestFocus />
                        </com.faltenreich.diaguard.ui.view.StickyHintInput>

                    </LinearLayout>

                    <View style="@style/LayoutRowSeparator" />

                    <LinearLayout style="@style/LayoutRow"
                        android:paddingEnd="@dimen/margin_between"
                        android:paddingRight="@dimen/margin_between">

                        <com.faltenreich.diaguard.ui.view.TintImageView
                            style="@style/LayoutRowImage"
                            android:layout_margin="0dp"
                            android:src="@drawable/ic_action_done"
                            app:tintColor="@color/gray_darker" />

                        <com.faltenreich.diaguard.ui.view.StickyHintInput
                            android:id="@+id/calculator_target"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/pref_therapy_targets_target"
                            android:inputType="numberDecimal" />

                    </LinearLayout>

                    <View style="@style/LayoutRowSeparator" />

                    <LinearLayout style="@style/LayoutRow"
                        android:paddingEnd="@dimen/margin_between"
                        android:paddingRight="@dimen/margin_between">

                        <com.faltenreich.diaguard.ui.view.TintImageView
                            style="@style/LayoutRowImage"
                            android:layout_margin="0dp"
                            android:src="@drawable/ic_done_all"
                            app:tintColor="@color/gray_darker" />

                        <com.faltenreich.diaguard.ui.view.StickyHintInput
                            android:id="@+id/calculator_correction"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/correction_value"
                            android:inputType="numberDecimal" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                style="@style/Padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/meal_optional"
                android:textColor="@color/gray_darker" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_end"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <LinearLayout style="@style/LayoutRow"
                        android:minHeight="@dimen/height_element"
                        android:paddingEnd="0dp"
                        android:paddingRight="0dp">

                        <com.faltenreich.diaguard.ui.view.TintImageView
                            style="@style/LayoutRowImage"
                            android:layout_margin="0dp"
                            android:src="@drawable/ic_factor"
                            app:tintColor="@color/gray_darker" />

                        <com.faltenreich.diaguard.ui.view.StickyHintInput
                            android:id="@+id/calculator_factor"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:layout_weight="1"
                            android:hint="@string/factor"
                            android:inputType="numberDecimal" />

                        <com.faltenreich.diaguard.ui.view.TintImageView
                            android:id="@+id/calculator_factor_edit_button"
                            android:layout_width="@dimen/size_image_small"
                            android:layout_height="@dimen/size_image_small"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/activity_horizontal_margin"
                            android:layout_marginLeft="@dimen/margin_between"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:layout_marginStart="@dimen/margin_between"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:contentDescription="@string/note"
                            android:src="@drawable/ic_settings"
                            app:tintColor="@color/gray" />

                    </LinearLayout>

                    <View style="@style/LayoutRowSeparator" />

                    <com.faltenreich.diaguard.ui.view.FoodListView
                        android:id="@+id/calculator_food_list_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:showIcon="true" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>