<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout style="@style/LayoutRow">

                <com.faltenreich.diaguard.ui.view.TintImageView
                    style="@style/LayoutRowImage"
                    android:src="@drawable/ic_time"
                    app:tintColor="@color/gray_darker" />

                <EditText
                    android:id="@+id/food_edit_name"
                    style="@style/LayoutRowItem"
                    android:background="@android:color/transparent"
                    android:hint="@string/name"
                    android:inputType="text" />

            </LinearLayout>

            <View style="@style/LayoutRowSeparator" />

            <LinearLayout style="@style/LayoutRow">

                <com.faltenreich.diaguard.ui.view.TintImageView
                    style="@style/LayoutRowImage"
                    android:src="@drawable/ic_time"
                    app:tintColor="@color/gray_darker" />

                <EditText
                    android:id="@+id/food_edit_brand"
                    style="@style/LayoutRowItem"
                    android:background="@android:color/transparent"
                    android:hint="@string/brand"
                    android:inputType="text" />

            </LinearLayout>

            <View style="@style/LayoutRowSeparator" />

            <LinearLayout style="@style/LayoutRow">

                <com.faltenreich.diaguard.ui.view.TintImageView
                    style="@style/LayoutRowImage"
                    android:src="@drawable/ic_time"
                    app:tintColor="@color/gray_darker" />

                <LinearLayout
                    style="@style/LayoutRowItem"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/food_edit_meal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:hint="@string/nutrient_carbohydrates"
                            android:inputType="numberDecimal"/>

                        <com.faltenreich.diaguard.ui.view.TintImageView
                            android:id="@+id/food_edit_add_nutrient"
                            android:layout_width="@dimen/size_image_small"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/margin_between"
                            android:layout_marginLeft="@dimen/margin_between"
                            android:src="@drawable/ic_action_new"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            app:tintColor="@color/green"/>

                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/food_edit_nutrients"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <View style="@style/LayoutRowSeparator" />

            <LinearLayout style="@style/LayoutRow">

                <com.faltenreich.diaguard.ui.view.TintImageView
                    style="@style/LayoutRowImage"
                    android:src="@drawable/ic_time"
                    app:tintColor="@color/gray_darker" />

                <EditText
                    android:id="@+id/food_edit_ingredients"
                    style="@style/LayoutRowItem"
                    android:background="@android:color/transparent"
                    android:hint="@string/ingredients"
                    android:inputType="textMultiLine|textCapSentences" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>