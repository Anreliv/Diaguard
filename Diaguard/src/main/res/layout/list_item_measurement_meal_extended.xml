<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_item_measurement_meal_extended_food_item_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.faltenreich.diaguard.ui.view.TintImageView
        android:id="@+id/list_item_measurement_meal_extended_food_item_add"
        android:layout_width="@dimen/size_image"
        android:layout_height="@dimen/size_image"
        android:layout_gravity="end"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="@string/add_value"
        android:src="@drawable/ic_action_new"
        app:tintColor="@color/gray_darker" />

</LinearLayout>