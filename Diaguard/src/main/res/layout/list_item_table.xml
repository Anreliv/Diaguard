<?xml version="1.0" encoding="utf-8"?>

<!-- PaddingStart of ViewGroup and height of ImageView are used for offset calculations for DayChart.java -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_element"
    android:paddingLeft="@dimen/margin_between"
    android:paddingStart="@dimen/margin_between"
    android:paddingRight="@dimen/padding"
    android:paddingEnd="@dimen/padding"
    android:gravity="center"
    android:orientation="horizontal"
    android:divider="?android:listDivider"
    android:showDividers="middle">

    <com.faltenreich.diaguard.ui.view.TintImageView
        android:id="@+id/list_item_chart_table_image"
        android:layout_width="@dimen/size_image"
        android:layout_height="@dimen/size_image"
        android:contentDescription="@null"
        android:focusable="false"
        app:tintColor="@color/gray_darker"
        tools:src="@drawable/ic_category_bloodsugar"/>

    <LinearLayout
        android:id="@+id/list_item_chart_table_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:divider="?android:listDivider"
        android:showDividers="middle"
        android:gravity="center"/>

</LinearLayout>