<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_between"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_element">

            <ImageView
                android:id="@+id/image_showcase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop" />

            <View
                android:id="@+id/layer_showcase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha=".5" />

            <LinearLayout
                style="@style/Padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_category"
                    android:layout_width="@dimen/size_image"
                    android:layout_height="@dimen/size_image"
                    android:layout_marginEnd="@dimen/margin_between"
                    android:layout_marginRight="@dimen/margin_between" />

                <TextView
                    android:id="@+id/category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_between"
                    android:layout_marginRight="@dimen/margin_between"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_medium" />

                <ImageView
                    android:id="@+id/button_delete"
                    android:layout_width="@dimen/size_image"
                    android:layout_height="@dimen/size_image"
                    android:src="@drawable/ic_action_delete"/>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/height_element"
            android:orientation="vertical" />

    </LinearLayout>

</android.support.v7.widget.CardView>