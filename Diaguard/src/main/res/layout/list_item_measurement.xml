<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_between"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_element">

            <ImageView
                android:id="@+id/image_showcase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:contentDescription="@null"/>

            <View
                android:id="@+id/layer_showcase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha=".5" />

            <LinearLayout
                style="@style/Padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.faltenreich.diaguard.ui.view.TintImageView
                    android:id="@+id/image_category"
                    android:layout_width="@dimen/size_image"
                    android:layout_height="@dimen/size_image"
                    android:layout_marginEnd="@dimen/margin_between"
                    android:layout_marginRight="@dimen/margin_between"
                    app:tintColor="@android:color/white" />

                <TextView
                    android:id="@+id/category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_between"
                    android:layout_marginRight="@dimen/margin_between"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_medium" />

                <CheckBox
                    android:id="@+id/checkbox_pin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_between"
                    android:layout_marginRight="@dimen/margin_between"
                    android:theme="@style/WhiteCheckBox"
                    android:contentDescription="@string/category_pin"/>

                <com.faltenreich.diaguard.ui.view.TintImageView
                    android:id="@+id/button_delete"
                    android:layout_width="@dimen/size_image_small"
                    android:layout_height="@dimen/size_image_small"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:src="@drawable/ic_delete"
                    app:tintColor="@android:color/white"/>

            </LinearLayout>

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/height_element" />

    </LinearLayout>

</android.support.v7.widget.CardView>