<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout style="@style/LayoutRow">

                <ImageView style="@style/LayoutRowImage"
                    android:src="@drawable/ic_time"
                    android:contentDescription="@string/note"/>

                <LinearLayout style="@style/LayoutRowItem"
                    android:orientation="horizontal">

                    <Button android:id="@+id/button_date"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="@dimen/margin_between"
                        android:layout_marginEnd="@dimen/margin_between"
                        android:onClick="onClickShowDatePicker"
                        style="?android:attr/borderlessButtonStyle"/>

                    <Button android:id="@+id/button_time"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:onClick="onClickShowTimePicker"
                        style="?android:attr/borderlessButtonStyle"/>

                </LinearLayout>

            </LinearLayout>

            <View style="@style/LayoutRowSeparator"/>

            <LinearLayout style="@style/LayoutRow">

                <ImageView style="@style/LayoutRowImage"
                    android:src="@drawable/ic_note"
                    android:contentDescription="@string/note"/>

                <EditText android:id="@+id/edittext_notes"
                    style="@style/LayoutRowItem"
                    android:hint="@string/note"
                    android:inputType="textMultiLine|textCapSentences"
                    android:background="@android:color/transparent"
                    android:paddingStart="@dimen/padding"
                    android:paddingLeft="@dimen/padding"/>

            </LinearLayout>

            <View style="@style/LayoutRowSeparator"/>

            <LinearLayout style="@style/LayoutRow">

                <ImageView style="@style/LayoutRowImage"
                    android:src="@drawable/ic_alarm"
                    android:contentDescription="@string/alarm"/>

                <Spinner android:id="@+id/spinner_alarm"
                    style="@style/LayoutRowItem"/>

            </LinearLayout>

            <View style="@style/LayoutRowSeparator"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:gravity="top">

                <ImageView style="@style/LayoutRowImage"
                    android:src="@drawable/ic_edit"
                    android:contentDescription="@string/add_value"
                    android:layout_marginTop="@dimen/margin_between"/>

                <LinearLayout android:id="@+id/content_dynamic"
                    style="@style/LayoutRowItem"
                    android:orientation="vertical"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>