<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/meal_value"
        style="@style/Padding"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_element"
        android:background="@android:color/transparent"
        android:inputType="numberDecimal"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_item_measurement_meal_extended_food_item_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/list_item_measurement_meal_extended_food_item_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_value"
        android:textColor="@color/green"
        style="?attr/borderlessButtonStyle"/>

</LinearLayout>