<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        style="@style/Padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/height_element"
        android:orientation="horizontal">

        <com.faltenreich.diaguard.ui.view.TintImageView
            android:layout_width="@dimen/size_image_small"
            android:layout_height="@dimen/size_image_small"
            android:src="@drawable/ic_edit"
            app:tintColor="@color/gray" />

        <EditText
            android:id="@+id/list_item_measurement_meal_food_item_value_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/padding_end"
            android:layout_marginStart="@dimen/padding_end"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:inputType="numberDecimal" />

    </LinearLayout>

    <View style="@style/LayoutRowSeparator" />

    <LinearLayout
        style="@style/Padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/height_element"
        android:orientation="horizontal">


        <com.faltenreich.diaguard.ui.view.TintImageView
            android:layout_width="@dimen/size_image_small"
            android:layout_height="@dimen/size_image_small"
            android:src="@drawable/ic_calc"
            app:tintColor="@color/gray" />

        <TextView
            android:id="@+id/list_item_measurement_meal_food_item_value_calculated"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/padding_end"
            android:layout_marginStart="@dimen/padding_end"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/meal_calculated"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_medium" />

    </LinearLayout>

    <View style="@style/LayoutRowSeparator"
        android:id="@+id/list_item_measurement_meal_food_item_separator"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_item_measurement_meal_food_item_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false" />

    <View style="@style/LayoutRowSeparator" />

    <Button
        android:id="@+id/list_item_measurement_meal_food_item_add"
        style="?attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/food_add"
        android:textColor="@color/green" />

</LinearLayout>