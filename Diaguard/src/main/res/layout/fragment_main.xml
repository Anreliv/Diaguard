<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:id="@+id/layout_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_lt"
        android:orientation="vertical"
        android:gravity="center"
        style="@style/Main">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom">

            <TextView android:id="@+id/textview_latest_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="60sp"
                android:text="244"
                android:textColor="@android:color/white"/>

            <TextView android:id="@+id/textview_latest_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/gray"
                android:text="mg/dL"
                android:layout_marginLeft="@dimen/margin_between"/>

            </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/green"
            android:layout_marginTop="@dimen/margin_between"
            android:layout_marginBottom="@dimen/margin_between"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_between"
            android:layout_marginBottom="@dimen/margin_between">

            <TextView android:id="@+id/textview_latest_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/gray"/>

            <TextView android:id="@+id/textview_latest_ago"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:text="@string/firstvisit_desc"/>

            </LinearLayout>

        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/green"
        android:layout_below="@id/layout_chart"/>

    <!-- Averages -->
    <LinearLayout android:id="@+id/layout_averages"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:background="@color/green_lt"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView android:id="@+id/textview_avg_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BoxText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/month"
                style="@style/BoxTextDesc"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView android:id="@+id/textview_avg_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BoxText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/week"
                style="@style/BoxTextDesc"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView android:id="@+id/textview_avg_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BoxText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day"
                style="@style/BoxTextDesc"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/green"
        android:layout_above="@id/layout_averages"/>

    <!-- Navigation -->
    <LinearLayout android:id="@+id/layout_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_chart"
        android:layout_above="@id/layout_averages"
        android:orientation="vertical"
        style="@style/Main">

        <RelativeLayout android:id="@+id/button_timeline"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/button_ltgreen"
            android:layout_marginBottom="@dimen/margin_between">

            <ImageView
                android:layout_width="@dimen/height_element"
                android:layout_height="@dimen/height_element"
                android:src="@drawable/chart"
                android:layout_marginLeft="@dimen/margin_between"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timeline"
                android:textSize="@dimen/text_large"
                android:textColor="@android:color/white"
                android:layout_centerInParent="true"/>

            </RelativeLayout>

        <RelativeLayout android:id="@+id/button_log"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_element"
            android:background="@drawable/button_ltgreen"
            android:layout_marginBottom="@dimen/margin_between">

            <ImageView
                android:layout_width="@dimen/height_element"
                android:layout_height="@dimen/height_element"
                android:src="@drawable/log"
                android:layout_marginLeft="@dimen/margin_between"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/log"
                android:textSize="@dimen/text_large"
                android:textColor="@android:color/white"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <RelativeLayout android:id="@+id/button_calculator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_element"
            android:background="@drawable/button_ltgreen"
            android:layout_marginBottom="@dimen/margin_between">

            <ImageView
                android:layout_width="@dimen/height_element"
                android:layout_height="@dimen/height_element"
                android:src="@drawable/calculator_white"
                android:layout_marginLeft="@dimen/margin_between"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/calculator"
                android:textSize="@dimen/text_large"
                android:textColor="@android:color/white"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <RelativeLayout android:id="@+id/button_export"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_element"
            android:background="@drawable/button_ltgreen"
            android:layout_marginBottom="@dimen/margin_between">

            <ImageView
                android:layout_width="@dimen/height_element"
                android:layout_height="@dimen/height_element"
                android:src="@drawable/export_white"
                android:layout_marginLeft="@dimen/margin_between"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/export"
                android:textSize="@dimen/text_large"
                android:textColor="@android:color/white"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>