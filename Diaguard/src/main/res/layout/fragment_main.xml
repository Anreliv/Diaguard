<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.android.diaguard.fragments.MainFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Main"
    android:paddingBottom="0dp"
    android:background="@color/gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- New event -->
        <LinearLayout android:id="@+id/layout_newevent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_between"
            android:orientation="vertical"
            android:clickable="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_white">

                <ImageView android:id="@+id/imageview_newevent"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_add_grid"
                    android:layout_alignParentRight="true"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    style="@style/Main"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@id/imageview_newevent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/newevent"
                        android:textSize="@dimen/text_medium"
                        android:layout_gravity="left"
                        style="@style/BoxText"
                        android:singleLine="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/newevent_desc"
                        android:layout_gravity="left"
                        style="@style/BoxTextDesc"
                        android:singleLine="true"/>

                </LinearLayout>

            </RelativeLayout>

            <View style="@style/BoxShadow"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin_between">

            <!-- Latest -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_marginRight="4dp">

                <TextView
                    android:text="@string/bloodsugar"
                    style="@style/BoxLabel"/>

                <LinearLayout android:id="@+id/layout_latest"
                    android:orientation="vertical"
                    android:gravity="center"
                    style="@style/Box"
                    android:background="@drawable/button_white"
                    android:paddingTop="2dp">

                    <TextView android:id="@+id/textview_latest_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/BoxText"/>

                    <TextView android:id="@+id/textview_latest_ago"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/BoxTextDesc" />

                </LinearLayout>

                <View style="@style/BoxShadow"/>

            </LinearLayout>

            <!-- Trend -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical"
                android:layout_marginLeft="4dp">

                <TextView
                    android:text="@string/trend"
                    style="@style/BoxLabel"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    style="@style/Box">

                    <ImageView android:id="@+id/imageview_trend"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"/>

                </LinearLayout>

                <View style="@style/BoxShadow"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Today -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/margin_between">

            <TextView
                android:text="@string/today"
                style="@style/BoxLabel"/>

            <LinearLayout android:id="@+id/layout_today"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/button_white"
                android:padding="0dp">

                <LinearLayout android:id="@+id/layout_chart"
                    android:layout_width="fill_parent"
                    android:layout_height="128dp"
                    android:orientation="horizontal"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/morning"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        style="@style/BoxTextDesc"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/noon"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        style="@style/BoxTextDesc"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/evening"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        style="@style/BoxTextDesc"/>

                </LinearLayout>

            </LinearLayout>

            <View style="@style/BoxShadow"/>

        </LinearLayout>

        <!-- Averages -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_between"
            android:orientation="vertical">

            <TextView
                android:text="@string/average"
                style="@style/BoxLabel"/>

        <LinearLayout
            android:orientation="horizontal"
            style="@style/Box"
            android:paddingTop="6dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView android:id="@+id/textview_avg_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/BoxText"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/month"
                    style="@style/BoxTextDesc"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView android:id="@+id/textview_avg_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/BoxText"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/week"
                    style="@style/BoxTextDesc"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView android:id="@+id/textview_avg_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/BoxText"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/day"
                    style="@style/BoxTextDesc"/>

            </LinearLayout>

        </LinearLayout>

        <View style="@style/BoxShadow"/>

        </LinearLayout>

        </LinearLayout>


</RelativeLayout>
