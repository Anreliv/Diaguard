<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_between">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        style="@style/BackgroundRoundWhite">

        <ImageView android:id="@+id/image"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:background="@drawable/background_round_green"
            android:padding="@dimen/padding_end"
            android:contentDescription="@string/category"/>

        <EditText android:id="@+id/value"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"/>

        <ImageView android:id="@+id/delete"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_action_remove"
            android:layout_alignParentRight="true"
            android:padding="16dp"
            android:background="@drawable/button_transparent_dk"
            android:contentDescription="@string/delete_value"/>

    </RelativeLayout>

</LinearLayout>