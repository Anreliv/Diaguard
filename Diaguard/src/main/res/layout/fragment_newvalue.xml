<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/margin_between">

    <TextView android:id="@+id/category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <View android:id="@+id/status"
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/padding"
            android:background="@color/gray"/>

        <EditText android:id="@+id/value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:gravity="center_horizontal"
            android:layout_marginStart="@dimen/margin_between"
            android:layout_marginLeft="@dimen/margin_between"/>

    </LinearLayout>

</LinearLayout>