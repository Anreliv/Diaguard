<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <include layout="@layout/view_toolbar" />

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/activity_newevent_scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:transitionName="transitionEntry">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:orientation="vertical">

                            <LinearLayout style="@style/LayoutRow">

                                <com.faltenreich.diaguard.ui.view.TintImageView
                                    style="@style/LayoutRowImage"
                                    android:contentDescription="@string/date_select"
                                    android:src="@drawable/ic_time"
                                    app:tintColor="@color/gray_darker" />

                                <LinearLayout
                                    style="@style/LayoutRowItem"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/button_date"
                                        style="?android:attr/borderlessButtonStyle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="@dimen/margin_between"
                                        android:layout_marginRight="@dimen/margin_between" />

                                    <Button
                                        android:id="@+id/button_time"
                                        style="?android:attr/borderlessButtonStyle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>

                            </LinearLayout>

                            <View style="@style/LayoutRowSeparator" />

                            <LinearLayout style="@style/LayoutRow">

                                <com.faltenreich.diaguard.ui.view.TintImageView
                                    style="@style/LayoutRowImage"
                                    android:contentDescription="@string/note"
                                    android:src="@drawable/ic_note"
                                    app:tintColor="@color/gray_darker" />

                                <EditText
                                    android:id="@+id/edittext_notes"
                                    style="@style/LayoutRowItem"
                                    android:background="@android:color/transparent"
                                    android:hint="@string/note"
                                    android:inputType="textMultiLine|textCapSentences"
                                    android:paddingLeft="12dp"
                                    android:paddingStart="12dp" />

                            </LinearLayout>

                            <View style="@style/LayoutRowSeparator" />

                            <LinearLayout style="@style/LayoutRow">

                                <com.faltenreich.diaguard.ui.view.TintImageView
                                    style="@style/LayoutRowImage"
                                    android:contentDescription="@string/alarm"
                                    android:src="@drawable/ic_alarm"
                                    app:tintColor="@color/gray_darker" />

                                <Button
                                    android:id="@+id/entry_button_alarm"
                                    style="?android:attr/borderlessButtonStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/alarm_reminder_none"
                                    android:textAllCaps="false"
                                    android:gravity="start|center_vertical"/>

                            </LinearLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <com.faltenreich.diaguard.ui.view.entry.MeasurementListView
                        android:id="@+id/layout_measurements"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="80dp"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical" />

                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>

        </LinearLayout>

    <com.faltenreich.diaguard.ui.view.entry.MeasurementFloatingActionMenu
        android:id="@+id/fab_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|end"
        android:padding="@dimen/padding_end"
        app:layout_behavior="com.faltenreich.diaguard.adapter.FloatingActionMenuBehavior"
        app:menu_backgroundColor="@color/semitransparent"
        app:menu_colorNormal="@color/green"
        app:menu_colorPressed="@color/green_light"
        app:menu_colorRipple="@color/green_lighter" />

</android.support.design.widget.CoordinatorLayout>