<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/table_row_height">

    <View
        android:id="@+id/category_divider_vertical"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/gray_light"/>

    <LinearLayout
        android:id="@+id/category_value_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/category_divider_vertical"
        android:layout_toEndOf="@+id/category_divider_vertical"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/category_value_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_small"
            tools:text="98"
            style="@style/NumberResizeable"/>

        <TextView
            android:id="@+id/category_value_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_small"
            tools:text="99"
            style="@style/NumberResizeable"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/category_value_container"
        android:background="@color/gray_light"/>

</RelativeLayout>