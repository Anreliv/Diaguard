<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    style="@style/InlineListItem">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/Padding"
                    android:id="@+id/date_time_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="19:05"/>

                <org.apmem.tools.layouts.FlowLayout
                    style="@style/Padding"
                    android:id="@+id/measurements_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="0dp"
                    android:gravity="fill_horizontal"
                    app:weightDefault="1.0"/>

                <org.apmem.tools.layouts.FlowLayout
                    style="@style/Padding"
                    android:id="@+id/entry_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="0dp"/>

                <TextView
                    style="@style/Padding"
                    android:id="@+id/note_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:text="Note"/>

                <TextView
                    style="@style/Padding"
                    android:id="@+id/food_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:text="Food 1\nFood 2"/>

            </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>