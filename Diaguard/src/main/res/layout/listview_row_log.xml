<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_element">

    <LinearLayout
        android:id="@+id/layoutRight"
        android:layout_height="fill_parent"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true">

        <ImageView android:id="@+id/notes"
            android:layout_width="@dimen/size_image"
            android:layout_height="@dimen/size_image"
            android:padding="@dimen/padding"
            android:layout_marginRight="@dimen/padding_end"
            android:src="@drawable/info"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/time"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/margin_between"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:padding="@dimen/padding_end"
            android:src="@drawable/arrow_right"/>

    </LinearLayout>

    <LinearLayout
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/layoutRight">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/height_element"
            android:layout_height="@dimen/height_element"
            android:padding="@dimen/margin_between"
            android:background="@color/green"/>

        <TextView
            android:id="@+id/value"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:gravity="right"
            android:textSize="@dimen/text_medium"/>

        <TextView
            android:id="@+id/unit"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/padding_end"/>

    </LinearLayout>

</RelativeLayout>