<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout style="@style/LayoutRow">

            <com.faltenreich.diaguard.ui.view.TintImageView
                style="@style/LayoutRowImageMultiline"
                android:src="@drawable/ic_business"
                app:tintColor="@color/gray_darker" />

            <TextView
                style="@style/LayoutRowItemMultiline"
                android:id="@+id/food_brand"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <View style="@style/LayoutRowSeparator" />

        <LinearLayout style="@style/LayoutRow">

            <com.faltenreich.diaguard.ui.view.TintImageView
                style="@style/LayoutRowImageMultiline"
                android:src="@drawable/ic_note"
                app:tintColor="@color/gray_darker"/>

            <TextView
                style="@style/LayoutRowItemMultiline"
                android:id="@+id/food_ingredients"
                android:textColor="@android:color/black"
                android:maxLines="3"
                android:ellipsize="end"/>

        </LinearLayout>

        <View style="@style/LayoutRowSeparator" />

        <LinearLayout style="@style/LayoutRow">

            <com.faltenreich.diaguard.ui.view.TintImageView
                style="@style/LayoutRowImage"
                android:src="@drawable/ic_category_meal"
                app:tintColor="@color/gray_darker" />

            <TextView
                style="@style/LayoutRowItem"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/food_value"
                android:textColor="@android:color/black" />

            <com.faltenreich.diaguard.ui.view.TintImageView
                android:id="@+id/food_sugar_level"
                android:layout_width="@dimen/size_image"
                android:layout_height="@dimen/size_image"
                android:layout_marginLeft="@dimen/padding_end"
                android:layout_marginStart="@dimen/padding_end"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_up"
                android:visibility="gone"/>

        </LinearLayout>

        <View style="@style/LayoutRowSeparator" />

        <LinearLayout
            android:id="@+id/food_labels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_between"
            android:layout_marginBottom="@dimen/margin_between"
            android:orientation="vertical" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
