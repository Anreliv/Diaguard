<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/food_common">

        <Preference
            android:summary="@string/powered_by"
            android:title="@string/food_source_common_provider">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/food_source_common_url" />
        </Preference>

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="showCommonFood"
            android:summary="@string/show_common_food_desc"
            android:title="@string/show_common_food" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/food_branded">

        <Preference
            android:summary="@string/powered_by"
            android:title="@string/food_source_branded_provider">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/food_source_branded_url" />
        </Preference>

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="showBrandedFood"
            android:summary="@string/show_branded_food_desc"
            android:title="@string/show_branded_food" />

    </PreferenceCategory>

</PreferenceScreen>